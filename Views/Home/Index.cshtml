@model IEnumerable<Employee>
@{ 
    ViewBag.title = "Emloyee List";
}        
<div class="container">
    <div class="row" >
    @foreach (var employee in Model)
    {
        var PhotoPath = "~/images/" + (employee.PhotoPath ?? "anas funky1.jpg");
        <div class="col-4" style="max-width: 30.5%; margin-bottom:15px;">
            <div class="card-header">
                <h3>@employee.Name</h3>
            </div>
            <img class=" img-fluid card-img-top imageThumbnail" src="@PhotoPath" height="100" width="80"
                    asp-append-version="true" />
            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="details" asp-route-id="@employee.ID"
                   class="btn btn-primary">View </a>
                <a asp-controller="home" asp-action="Edit" asp-route-id="@employee.ID"
                   class="btn btn-primary">Edit </a>
                <a href="#" class="btn btn-danger">Delete</a>
            </div>
        </div>
    }
    </div>
</div>